{
  "name": "spark",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "postinstall": "lerna run build",
    "clean": "lerna clean --yes && lerna exec -- rm -rf dist",
    "build": "lerna run build",
    "build:watch": "lerna run build && lerna watch -- lerna run build --since",
    "release": "lerna publish --yes",
    "storybook:start": "storybook dev -p 6006",
    "storybook:build": "storybook build -o dist",
    "tailwind-config-viewer": "npx @adevinta/tailwind-config-viewer -c ./tailwind.config.viewer.cjs",
    "tailwind-config-viewer:build": "mkdir -p ./dist/viewer && npx @adevinta/tailwind-config-viewer -c ./tailwind.config.viewer.cjs export ./dist/viewer",
    "test": "vitest",
    "test:ui": "vitest watch --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:open": "npx open-cli ./dist/coverage/index.html",
    "typecheck": "tsc --noEmit",
    "commit": "git-cz",
    "lint": "eslint --config .eslintrc.cjs packages/**/*.{ts,tsx,js,mjs} documentation/**/*.{ts,tsx} --cache",
    "lint:staged": "lint-staged --config .lintstagedrc.json",
    "prettier": "prettier --config .prettierrc.json --write \"{packages,documentation,src}/**/*.{ts,tsx,js}\"",
    "prettify": "npm run lint && npm run prettier",
    "node:check": "node bin/check-node-version.js",
    "generate": "spark-generate"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:adevinta/spark.git"
  },
  "dependencies": {
    "@spark-ui/tabs": "*",
    "@spark-ui/theme-utils": "*"
  },
  "devDependencies": {
    "@adevinta/tailwind-config-viewer": "1.7.4",
    "@babel/core": "7.21.4",
    "@commitlint/cli": "17.6.3",
    "@commitlint/config-conventional": "17.6.1",
    "@commitlint/config-lerna-scopes": "17.6.3",
    "@commitlint/cz-commitlint": "17.4.4",
    "@commitlint/prompt-cli": "17.6.3",
    "@radix-ui/react-switch": "*",
    "@spark-ui/cli-utils": "*",
    "@storybook/addon-a11y": "^7.0.17",
    "@storybook/addon-actions": "^7.0.17",
    "@storybook/addon-essentials": "^7.0.17",
    "@storybook/addon-interactions": "^7.0.17",
    "@storybook/addon-links": "^7.0.17",
    "@storybook/addon-mdx-gfm": "^7.0.17",
    "@storybook/addon-styling": "^1.0.8",
    "@storybook/blocks": "^7.0.17",
    "@storybook/manager-api": "^7.0.17",
    "@storybook/react": "^7.0.17",
    "@storybook/react-vite": "^7.0.17",
    "@storybook/testing-library": "^0.1.0",
    "@storybook/theming": "^7.0.17",
    "@testing-library/dom": "8.20.0",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "14.4.3",
    "@types/react": "18.0.33",
    "@types/react-dom": "18.0.10",
    "@typescript-eslint/eslint-plugin": "5.51.0",
    "@typescript-eslint/parser": "5.56.0",
    "@vitejs/plugin-react": "3.1.0",
    "@vitest/coverage-istanbul": "^0.32.0",
    "@vitest/ui": "0.32.0",
    "autoprefixer": "10.4.14",
    "babel-loader": "8.3.0",
    "browserslist-to-esbuild": "1.2.0",
    "class-variance-authority": "0.5.2",
    "commitizen": "4.3.0",
    "copy-to-clipboard": "3.3.3",
    "deepmerge": "4.3.1",
    "eslint": "8.41.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-n": "15.7.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-standard": "5.0.0",
    "eslint-plugin-storybook": "0.6.12",
    "eslint-plugin-tailwindcss": "3.12.1",
    "eslint-plugin-testing-library": "5.10.3",
    "husky": "8.0.3",
    "jsdom": "21.1.1",
    "lerna": "6.4.1",
    "lint-staged": "13.2.2",
    "postcss": "8.4.21",
    "prettier": "2.8.7",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-live": "3.2.0",
    "rollup-plugin-terser": "7.0.2",
    "storybook": "7.0.17",
    "tailwindcss": "3.3.2",
    "tailwindcss-radix": "2.8.0",
    "ts-node": "10.9.1",
    "type-fest": "3.10.0",
    "typescript": "4.9.5",
    "vite": "4.3.7",
    "vite-plugin-dts": "1.7.2",
    "vite-plugin-turbosnap": "1.0.1",
    "vite-tsconfig-paths": "4.2.0",
    "vitest": "^0.32.0"
  },
  "workspaces": [
    "packages/components/*",
    "packages/hooks/*",
    "packages/utils/*"
  ],
  "browserslist": [
    "> 0.5% or > 0.1% and last 2 years, not dead, not Firefox ESR, not and_qq > 0, not and_uc > 0, not and_ff >0"
  ],
  "namespaces": [
    "spark-ui"
  ],
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
