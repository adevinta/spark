{
  "name": "spark",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "postinstall": "lerna run build --scope=@spark-ui/theme-utils",
    "clean": "lerna clean --yes && lerna exec -- rm -rf dist",
    "build": "lerna run build",
    "build:watch": "lerna run build && lerna watch -- lerna run build --since",
    "release": "lerna publish --yes --include-merged-tags --no-verify-access",
    "storybook:start": "npx spark setup-themes && storybook dev -p 6006",
    "storybook:build": "storybook build -o dist",
    "tailwind-config-viewer": "npx tailwind-config-viewer -c ./tailwind.config.viewer.cjs",
    "tailwind-config-viewer:build": "mkdir -p ./dist/viewer && npx tailwind-config-viewer -c ./tailwind.config.viewer.cjs export ./dist/viewer",
    "test": "vitest",
    "test:ui": "vitest watch --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "commit": "git-cz",
    "lint": "eslint --config .eslintrc.cjs '{packages,documentation}/{src/**/*.{ts,tsx,js},helpers/**/*.{ts,tsx,js}}' --cache",
    "lint:staged": "lint-staged --config .lintstagedrc.json",
    "prettier": "prettier --config .prettierrc.json --write \"{packages,documentation,src}/**/*.{ts,tsx}\"",
    "prettify": "npm run lint && npm run prettier",
    "node:check": "node bin/check-node-version.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:adevinta/spark.git"
  },
  "dependencies": {
    "@spark-ui/theme-utils": "*",
    "@spark-ui/theme-utils-node": "*"
  },
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@commitlint/config-lerna-scopes": "17.4.2",
    "@commitlint/cz-commitlint": "17.4.4",
    "@commitlint/prompt-cli": "17.4.4",
    "@spark-ui/cli-utils": "*",
    "@storybook/addon-actions": "7.0.0-beta.62",
    "@storybook/addon-essentials": "7.0.0-beta.62",
    "@storybook/addon-interactions": "7.0.0-beta.62",
    "@storybook/addon-links": "7.0.0-beta.62",
    "@storybook/blocks": "7.0.0-beta.62",
    "@storybook/builder-vite": "7.0.0-beta.62",
    "@storybook/react": "7.0.0-beta.62",
    "@storybook/react-vite": "7.0.0-beta.62",
    "@storybook/testing-library": "0.0.14-next.1",
    "@testing-library/dom": "8.20.0",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "14.4.3",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "@typescript-eslint/eslint-plugin": "5.51.0",
    "@typescript-eslint/parser": "5.51.0",
    "@vitejs/plugin-react": "3.1.0",
    "@vitest/coverage-istanbul": "0.28.4",
    "@vitest/ui": "0.28.4",
    "autoprefixer": "10.4.13",
    "babel-loader": "8.3.0",
    "class-variance-authority": "0.4.0",
    "commitizen": "4.3.0",
    "copy-to-clipboard": "3.3.3",
    "deepmerge": "4.3.0",
    "eslint": "8.33.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-n": "15.6.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-standard": "5.0.0",
    "eslint-plugin-storybook": "0.6.10",
    "eslint-plugin-tailwindcss": "3.8.3",
    "eslint-plugin-testing-library": "5.10.0",
    "husky": "8.0.3",
    "jsdom": "21.1.0",
    "lerna": "6.4.1",
    "lint-staged": "13.1.2",
    "postcss": "8.4.21",
    "prettier": "2.8.3",
    "prettier-plugin-tailwindcss": "0.2.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-live": "3.1.1",
    "rollup-plugin-terser": "7.0.2",
    "storybook": "7.0.0-beta.62",
    "tailwind-config-viewer": "1.7.2",
    "tailwindcss": "3.2.7",
    "ts-node": "10.9.1",
    "type-fest": "3.5.6",
    "typescript": "4.9.5",
    "vite": "4.1.0",
    "vite-plugin-dts": "1.7.2",
    "vite-tsconfig-paths": "4.0.5",
    "vitest": "0.29.2"
  },
  "workspaces": [
    "packages/components/*",
    "packages/hooks/*",
    "packages/utils/*"
  ],
  "namespaces": [
    "spark-ui"
  ],
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
