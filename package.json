    "concurrently": "^9.1.2",
    "copy-to-clipboard": "3.3.3",
    "deepmerge": "4.3.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-config-standard": "^17.1.0",
