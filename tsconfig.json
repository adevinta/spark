{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": ".",
    "composite": false,
    "downlevelIteration": true,
    "emitDeclarationOnly": false,
    "noEmit": true,
    "module": "ESNext",
    "paths": {
      "@docs/*": ["./documentation/*"],
      "@spark-ui/components/*": ["packages/components/src/*"],  // Ajoutez cette ligne sp√©cifique
      "@spark-ui/*": ["packages/*/src"],
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"]
}
